@model FirstWebApplication.Models.XmlModel

@{ 
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hammam Test Project</h1>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

<div class="form-group">

    @Html.LabelFor(model => model.FirstName, "FirstName", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your first name", required = "required" } })
    </div>

    @Html.LabelFor(model => model.LastName, "LastName", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your last name", required = "required" } })
    </div>

    @Html.LabelFor(model => model.Nationality, "Nationality", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.Nationality, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your nationality", required = "required" } })
    </div>

    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your last name", required = "required" } })
    </div>

    @Html.LabelFor(model => model.Department, "Department", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your department", required = "required" } })
    </div>

    @Html.LabelFor(model => model.PhoneNumber, "PhoneNumber", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your phone number", required = "required" } })
    </div>

    @Html.LabelFor(model => model.DateOfBirth, "DateOfBirth", htmlAttributes: new { @class = "control-label col-sm-2" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", placeholder = "Please enter your date of birth", required = "required" } })
    </div>

</div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-4">
            <br />
            <input type ="submit" id="saveBtnId" value="save" class="btn btn-primary" />
        </div>
    </div>

}